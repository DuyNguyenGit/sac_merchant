<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_login"
    android:orientation="vertical"
    tools:context=".view.impl.MainActivity">

    <LinearLayout
        android:id="@+id/layout_greeting"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:background="@color/color_background_home_greeting"
        android:gravity="center"
        android:visibility="visible"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgCloud"
            android:layout_marginTop="30dp"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_cloud" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:text="@string/greeting"
            android:textColor="@android:color/white"
            android:textSize="18sp" />
        <View
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:background="@color/color_bg_home_grid" />
    </LinearLayout>




    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:id="@+id/layoutMobilePos"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="@drawable/bg_home_item_selector"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <LinearLayout
                    android:orientation="vertical"
                    android:layout_centerInParent="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/imgMobilePos"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:src="@drawable/ic_mobilepos_notlogin"
                        android:contentDescription="tab_icon_description"
                        android:scaleType="centerInside" />

                    <TextView
                        android:id="@+id/tvMobilePos"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLines="2"
                        android:layout_marginTop="20dp"
                        android:gravity="center_horizontal"
                        android:text="Mobile POS"
                        android:textColor="@android:color/white"
                        android:textSize="16sp" />
                </LinearLayout>

                <View
                    android:background="@color/color_bg_home_grid"
                    android:layout_alignParentRight="true"
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"/>
                <View
                    android:background="@color/color_bg_home_grid"
                    android:layout_alignParentBottom="true"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"/>

            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/layoutAccountManager"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="@drawable/bg_home_item_selector"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_centerInParent="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/imgAccountManager"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:src="@drawable/ic_login"
                        android:contentDescription="tab_icon_description"
                        android:scaleType="centerInside" />

                    <TextView
                        android:id="@+id/tvAccountManager"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLines="2"
                        android:layout_marginTop="20dp"
                        android:gravity="center_horizontal"
                        android:text="Mobile POS"
                        android:textColor="@android:color/white"
                        android:textSize="16sp" />


                </LinearLayout>

                <View
                    android:background="@color/color_bg_home_grid"
                    android:layout_alignParentBottom="true"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"/>
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:id="@+id/layoutQRCode"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="@drawable/bg_home_item_selector"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <LinearLayout
                    android:orientation="vertical"
                    android:layout_centerInParent="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <ImageView
                        android:id="@+id/imgQRCode"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_centerInParent="true"
                        android:src="@drawable/ic_qrcode_notlogin"
                        android:contentDescription="tab_icon_description"
                        android:scaleType="centerInside" />

                    <TextView
                        android:id="@+id/tvQRCode"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLines="2"
                        android:layout_marginTop="20dp"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@+id/imgQRCode"
                        android:gravity="center_horizontal"
                        android:text="Mobile POS"
                        android:textColor="@android:color/white"
                        android:textSize="16sp" />


                </LinearLayout>

                <View
                    android:background="@color/color_bg_home_grid"
                    android:layout_alignParentRight="true"
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"/>

                <View
                    android:background="@color/color_bg_home_grid"
                    android:layout_alignParentBottom="true"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/layoutHistory"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="@drawable/bg_home_item_selector"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_centerInParent="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">



                    <ImageView
                        android:id="@+id/imgHistory"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_centerInParent="true"
                        android:src="@drawable/ic_history_notlogin"
                        android:contentDescription="tab_icon_description"
                        android:scaleType="centerInside" />

                    <TextView
                        android:id="@+id/tvHistory"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLines="2"
                        android:layout_marginTop="20dp"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@+id/imgHistory"
                        android:gravity="center_horizontal"
                        android:text="Mobile POS"
                        android:textColor="@android:color/white"
                        android:textSize="16sp" />


                </LinearLayout>


                <View
                    android:background="@color/color_bg_home_grid"
                    android:layout_alignParentBottom="true"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"/>
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:id="@+id/layoutIntroduce"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="@drawable/bg_home_item_selector"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_centerInParent="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <ImageView
                        android:id="@+id/imgIntroduce"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_centerInParent="true"
                        android:src="@drawable/ic_introduce"
                        android:contentDescription="tab_icon_description"
                        android:scaleType="centerInside" />

                    <TextView
                        android:id="@+id/tvIntroduce"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLines="2"
                        android:layout_marginTop="20dp"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@+id/imgIntroduce"
                        android:gravity="center_horizontal"
                        android:text="Mobile POS"
                        android:textColor="@android:color/white"
                        android:textSize="16sp" />


                </LinearLayout>

                <View
                    android:background="@color/color_bg_home_grid"
                    android:layout_alignParentRight="true"
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"/>

            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/layoutGuideLine"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="@drawable/bg_home_item_selector"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <LinearLayout
                    android:orientation="vertical"
                    android:layout_centerInParent="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/imgGuideLine"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_centerInParent="true"
                        android:src="@drawable/ic_guideline"
                        android:contentDescription="tab_icon_description"
                        android:scaleType="centerInside" />

                    <TextView
                        android:id="@+id/tvGuideLine"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLines="2"
                        android:layout_marginTop="20dp"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@+id/imgGuideLine"
                        android:gravity="center_horizontal"
                        android:text="Mobile POS"
                        android:textColor="@android:color/white"
                        android:textSize="16sp" />


                </LinearLayout>


            </RelativeLayout>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
